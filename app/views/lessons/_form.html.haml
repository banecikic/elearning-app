-# frozen_string_literal: true
= simple_form_for(@lesson) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :image
    = f.input :title
    = f.input :duration
    = f.input :cost
    = f.input :category
    = f.input :language
    = f.input :level
    = f.input :description

  .form-actions
    = f.button :submit
