-# frozen_string_literal: true
= simple_form_for(@schedule) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :title
    = f.input :start
    = f.input :end
    = f.input :trainer_id
    = f.input :account_id

  .form-actions
    = f.button :submit
